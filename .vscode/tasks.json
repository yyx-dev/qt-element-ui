{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "qmake-build-and-run",
            "type": "shell",
            "command": "make",
            "args": ["all"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "cmake-build-and-run",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p build && cd build && cmake .. -G \"Ninja\" -DCMAKE_CXX_COMPILER=g++ && ninja -j16 && ./qt-element-ui",
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true,
                "showReuseMessage": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}